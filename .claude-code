# Configuration Claude Code pour le projet Cerfaos
# Projet Laravel avec Vite et Tailwind CSS

[project]
name = "Cerfaos"
type = "laravel"
framework = "laravel-12"
frontend = "vite-tailwind"

[development]
server_url = "http://127.0.0.1:8000"
vite_url = "http://localhost:5173"
database = "sqlite"

[paths]
app = "app/"
resources = "resources/"
views = "resources/views/"
routes = "routes/"
database = "database/"
tests = "tests/"

[features]
authentication = true
admin_panel = true
frontend_assets = true
email_verification = true

[ai_assistant]
enabled = true
model = "claude-3.5-sonnet"
context = "Laravel development with modern frontend stack"
